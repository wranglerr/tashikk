<div class="space-y-6">
  <div>
    <h1 class="text-xl font-bold text-stone-700">Daily Review</h1>
    <p class="text-sm text-stone-500 mt-1">
      You have open tasks from <strong><%= @yesterday.strftime("%B %-d") %></strong>. What would you like to do with them?
    </p>
  </div>

  <%= form_with url: process_review_path, method: :post, class: "space-y-4" do %>
    <% @open_tasks.each do |task| %>
      <div class="flex items-start gap-3 py-3 px-3 bg-white rounded-lg border border-stone-200">
        <span class="mt-0.5 w-5 h-5 flex-shrink-0 border border-stone-400 rounded-sm flex items-center justify-center text-xs text-stone-400">&nbsp;</span>
        <div class="flex-1">
          <p class="text-stone-800 leading-relaxed"><%= task.text %></p>
          <div class="flex flex-wrap gap-2 mt-2">
            <label class="inline-flex items-center gap-1 text-xs cursor-pointer">
              <input type="radio" name="decisions[<%= task.line_index %>]" value="migrate_today" checked class="text-amber-600 focus:ring-amber-500">
              <span class="text-stone-600">Migrate to today</span>
            </label>
            <label class="inline-flex items-center gap-1 text-xs cursor-pointer">
              <input type="radio" name="decisions[<%= task.line_index %>]" value="migrate_monthly" class="text-amber-600 focus:ring-amber-500">
              <span class="text-stone-600">Migrate to monthly</span>
            </label>
            <label class="inline-flex items-center gap-1 text-xs cursor-pointer">
              <input type="radio" name="decisions[<%= task.line_index %>]" value="complete" class="text-amber-600 focus:ring-amber-500">
              <span class="text-stone-600">Complete</span>
            </label>
            <label class="inline-flex items-center gap-1 text-xs cursor-pointer">
              <input type="radio" name="decisions[<%= task.line_index %>]" value="cancel" class="text-amber-600 focus:ring-amber-500">
              <span class="text-stone-600">Cancel</span>
            </label>
            <label class="inline-flex items-center gap-1 text-xs cursor-pointer">
              <input type="radio" name="decisions[<%= task.line_index %>]" value="keep" class="text-amber-600 focus:ring-amber-500">
              <span class="text-stone-600">Keep</span>
            </label>
          </div>
        </div>
      </div>
    <% end %>

    <div class="flex items-center gap-3 pt-2">
      <button type="submit" class="px-4 py-2 bg-stone-800 text-amber-50 rounded-lg text-sm font-medium hover:bg-stone-700 transition-colors">
        Process Review
      </button>
      <a href="<%= daily_log_path(date: Date.today) %>" class="text-sm text-stone-500 hover:text-stone-700">Skip for now</a>
    </div>
  <% end %>
</div>
